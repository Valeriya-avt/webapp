<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://localhost/Website</property>
        <property name="connection.username">postgres</property>
        <property name="connection.password">1</property>
        <property name="show_sql">true</property>

        <mapping class="ru.msu.cmc.webapp.Models.Admin"/>
        <mapping class="ru.msu.cmc.webapp.Models.Book"/>
        <mapping class="ru.msu.cmc.webapp.Models.Client"/>
        <mapping class="ru.msu.cmc.webapp.Models.Order"/>
        <mapping class="ru.msu.cmc.webapp.Models.ShoppingCart"/>

    </session-factory>
</hibernate-configuration>